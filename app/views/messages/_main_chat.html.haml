
.chat-main
  .main-header
    .main-header__left 
      %p.main-header__left__group 
        = @group.name
      %p.main-header__left__member-list 
        Member:
      - @group.users.each do |user|
        %p.main-header__left__member-list 
          =user.name
    .main-header__edit  
      = link_to edit_group_path(@group.id) ,class:"main-header__edit__text" do
        %p Edit

  .messages
    = render @messages
        
  .form
    = form_with model: [@group, @message], html: {class: "new-message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'input-box__icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'


  
  